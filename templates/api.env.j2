# Backend API Environment Configuration
# Managed by Ansible - do not edit manually

# Redis connection
REDIS_URL=redis://redis:6379/0

# AI/LLM Configuration (for natural language search)
AI_API_KEY={{ vault_ai_api_key }}
AI_API_BASE_URL={{ vault_ai_api_base_url }}
AI_PRIMARY_MODEL={{ vault_ai_primary_model }}
AI_SECONDARY_MODEL={{ vault_ai_secondary_model }}

# External API Configuration
ENA_API_BASE=https://www.ebi.ac.uk/ena/portal/api

# CORS - allow requests from the frontend domain
CORS_ORIGINS=https://{{ brc_domain }},http://localhost:3000

# Logging
LOG_LEVEL={{ api_log_level }}

# Environment
ENVIRONMENT={{ brc_environment }}

# Rate limiting
RATE_LIMIT_REQUESTS={{ api_rate_limit_requests }}
RATE_LIMIT_WINDOW={{ api_rate_limit_window }}

# Catalog path (mounted from host)
CATALOG_PATH=/catalog/output
